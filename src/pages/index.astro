---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Card, CardContent, CardHeader, CardTitle, CardFooter } from '../components/ui/card';
import content from '../data/content.json';
import tthcm from '../assets/30.11tt-hcm.jpg';
---

<BaseLayout title="Độc lập dân tộc – Con đường chủ nghĩa xã hội" description="Môn học HCM202: Tư tưởng Hồ Chí Minh về độc lập dân tộc gắn liền với chủ nghĩa xã hội.">
  <section class="relative overflow-hidden bg-[#050000] text-[color:var(--vn-yellow-soft)]">
    <!-- Background image rõ hơn -->
    <div class="pointer-events-none absolute inset-0">
      <img 
        src={tthcm.src}
        alt="Tuyên ngôn độc lập" 
        class="h-full w-full object-cover opacity-80"
      />
      <!-- Overlay nhẹ để giữ độ tương phản cho text -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/35 to-black/50" />
    </div>
    
    <div class="relative mx-auto max-w-6xl px-4 pb-20 pt-28 md:pb-24">
      <div class="mx-auto max-w-3xl text-center space-y-6">
        <p class="text-xs font-semibold uppercase tracking-[0.32em] text-[color:var(--vn-yellow-soft)]/90">
          HCM202 · Tư tưởng Hồ Chí Minh
        </p>
        <h1 class="text-balance text-3xl font-bold leading-tight tracking-tight text-[color:var(--vn-yellow-soft)] sm:text-4xl lg:text-5xl">
          Độc lập dân tộc
          <span class="block mt-2">và con đường chủ nghĩa xã hội</span>
        </h1>
        <p class="mx-auto max-w-2xl text-sm text-[color:var(--vn-yellow-soft)]/90 md:text-base leading-relaxed">
          Tư tưởng Hồ Chí Minh đặt nền móng cho sự kết hợp độc đáo giữa độc lập dân tộc và phát triển xã hội bền vững. 
          Khám phá hành trình từ Nguyễn Ái Quốc ra đi tìm đường cứu nước đến Việt Nam hội nhập toàn cầu ngày nay.
        </p>
        <div class="flex flex-wrap justify-center gap-3 pt-4">
          <a 
            href="/timeline" 
            class="group inline-flex items-center gap-1.5 rounded-md bg-gradient-to-r from-[color:var(--vn-red-soft)] via-[color:var(--vn-red-dark)] to-[color:var(--vn-red-soft)] border border-[color:var(--vn-red-soft)] px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:scale-[1.02] hover:shadow-lg active:scale-[0.98]"
          >
            <span>Xem Timeline HCM202</span>
            <span class="inline-block transition-transform group-hover:translate-x-0.5">→</span>
          </a>
          <a
            href="/game"
            class="group inline-flex items-center gap-1.5 rounded-md border border-[color:var(--vn-yellow-soft)] bg-gradient-to-r from-[#260000] via-[#3a0000] to-[#260000] px-4 py-2 text-sm font-semibold text-[color:var(--vn-yellow-soft)] shadow-md transition-all duration-300 hover:scale-[1.02] hover:bg-[#3a0000] hover:border-[color:var(--vn-yellow-soft)] hover:shadow-lg active:scale-[0.98]"
          >
            <span>Vào Game trắc nghiệm</span>
            <span class="inline-block transition-transform group-hover:translate-x-0.5">→</span>
          </a>
          <a
            href="/puzzle"
            class="group inline-flex items-center gap-1.5 rounded-md bg-gradient-to-r from-[color:var(--vn-yellow-soft)] to-[#f5d547] border border-[color:var(--vn-yellow-soft)] px-4 py-2 text-sm font-semibold text-[#1a0000] shadow-md transition-all duration-300 hover:scale-[1.02] hover:shadow-lg active:scale-[0.98]"
          >
            <span>Vào Game ghép hình</span>
            <span class="inline-block transition-transform group-hover:translate-x-0.5">→</span>
          </a>
        </div>
      </div>

      <!-- Stats -->
      <div class="mt-12 flex flex-wrap justify-center gap-8 text-center text-xs text-[color:var(--vn-yellow-soft)]/85">
                <div>
          <p class="text-2xl font-bold text-[color:var(--vn-yellow-soft)]">7</p>
          <p class="mt-1">mốc tư tưởng tiêu biểu</p>
                </div>
                <div>
          <p class="text-2xl font-bold text-[color:var(--vn-yellow-soft)]">HCM202</p>
          <p class="mt-1">gắn với thực tiễn đổi mới</p>
                </div>
                <div>
          <p class="text-2xl font-bold text-[color:var(--vn-yellow-soft)]">Quiz</p>
          <p class="mt-1">củng cố kiến thức môn học</p>
        </div>
                <div>
          <p class="text-2xl font-bold text-[color:var(--vn-yellow-soft)]">Puzzle</p>
          <p class="mt-1">ghép hình tư tưởng Hồ Chí Minh</p>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-background">
    <div class="mx-auto max-w-6xl space-y-10 px-4 py-16 md:py-20">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-balance text-2xl font-semibold tracking-tight md:text-3xl">
          {(content as any).hero.title}
        </h2>
        <p class="mt-2 text-sm font-medium text-[color:var(--vn-red-soft)] md:text-base">
          {(content as any).hero.subtitle}
        </p>
        <p class="mt-3 text-sm text-muted-foreground md:text-base">
          {(content as any).hero.description}
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {(content as any).sections.map((section: any) => (
          <Card class="border-[color:var(--vn-red-soft)]/20 bg-[color:var(--card)]" key={section.id}>
            <CardHeader>
              <CardTitle class="text-base">{section.title}</CardTitle>
            </CardHeader>
            <CardContent class="space-y-2 text-sm text-muted-foreground">
              <p>{section.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>

      <div class="action-button-cards grid gap-6 md:grid-cols-3 md:auto-rows-fr">
        <Card class="action-button-card !flex !flex-col !gap-0 border-[color:var(--vn-red-soft)]/20 bg-[color:var(--card)]">
          <CardHeader class="!pb-4">
            <CardTitle class="text-base">Timeline Tư tưởng Hồ Chí Minh</CardTitle>
          </CardHeader>
          <CardContent class="action-button-card-content !pb-0 space-y-2 text-sm text-muted-foreground">
            <p>
              Khám phá hành trình phát triển tư tưởng Hồ Chí Minh từ năm 1911 đến con đường độc lập dân tộc gắn với chủ nghĩa xã hội qua một timeline trực quan, dễ hiểu.
            </p>
          </CardContent>
          <CardFooter class="action-button-card-footer !pt-4 !mt-auto">
            <a 
              href="/timeline" 
              class="inline-flex items-center justify-center rounded-md bg-gradient-to-r from-[color:var(--vn-red-soft)] to-[color:var(--vn-red-dark)] px-4 py-2 text-sm font-semibold text-white shadow-md transition-all hover:scale-[1.02] hover:shadow-lg"
              style="border: 1px solid var(--vn-red-soft);"
            >
              Xem Timeline →
            </a>
          </CardFooter>
        </Card>

        <Card class="action-button-card !flex !flex-col !gap-0 border-[color:var(--vn-red-soft)]/20 bg-[color:var(--card)]">
          <CardHeader class="!pb-4">
            <CardTitle class="text-base">Games tương tác</CardTitle>
          </CardHeader>
          <CardContent class="action-button-card-content !pb-0 space-y-2 text-sm text-muted-foreground">
            <p>
              Trả lời câu hỏi trắc nghiệm hoặc thử thách với game ghép hình về tư tưởng Hồ Chí Minh. Tích luỹ điểm số và thử thách bạn bè để xem ai hiểu rõ nhất!
            </p>
          </CardContent>
          <CardFooter class="action-button-card-footer !pt-4 !mt-auto">
            <a 
              href="/game" 
              class="flex-1 inline-flex items-center justify-center rounded-md bg-gradient-to-r from-[color:var(--vn-yellow-soft)] to-[#f5d547] px-4 py-2 text-sm font-semibold text-[#1a0000] shadow-md transition-all hover:scale-[1.02] hover:shadow-lg"
              style="border: 1px solid var(--vn-yellow-soft); margin-right: 0.75rem;"
            >
              Chơi quiz →
            </a>
            <a 
              href="/puzzle" 
              class="flex-1 inline-flex items-center justify-center rounded-md bg-gradient-to-r from-[color:var(--vn-red-soft)] to-[color:var(--vn-red-dark)] px-4 py-2 text-sm font-semibold text-white shadow-md transition-all hover:scale-[1.02] hover:shadow-lg"
              style="border: 1px solid var(--vn-red-soft); margin-left: 0.75rem;"
            >
              Chơi puzzle →
            </a>
          </CardFooter>
        </Card>

        <Card class="action-button-card !flex !flex-col !gap-0 border-[color:var(--vn-red-soft)]/20 bg-[color:var(--card)]">
          <CardHeader class="!pb-4">
            <CardTitle class="text-base">Trải nghiệm AR &amp; 3D</CardTitle>
          </CardHeader>
          <CardContent class="action-button-card-content !pb-0 space-y-2 text-sm text-muted-foreground">
            <p>
              Quét QR để mở mô hình trận địa ngay trong không gian của bạn, sau đó tiếp tục xem Gallery 3D với góc nhìn chuyên sâu đã được sưu tầm sẵn.
            </p>
          </CardContent>
          <CardFooter class="action-button-card-footer !pt-4 !mt-auto">
            <a 
              href="/ar-scan" 
              class="flex-1 inline-flex items-center justify-center rounded-md bg-gradient-to-r from-[color:var(--vn-red-soft)] to-[color:var(--vn-red-dark)] px-4 py-2 text-sm font-semibold text-white shadow-md transition-all hover:scale-[1.02] hover:shadow-lg"
              style="border: 1px solid var(--vn-red-soft); margin-right: 0.75rem;"
            >
              Quét QR →
            </a>
            <a 
              href="/gallery" 
              class="flex-1 inline-flex items-center justify-center rounded-md bg-gradient-to-r from-[color:var(--vn-yellow-soft)] to-[#f5d547] px-4 py-2 text-sm font-semibold text-[#1a0000] shadow-md transition-all hover:scale-[1.02] hover:shadow-lg"
              style="border: 1px solid var(--vn-yellow-soft); margin-left: 0.75rem;"
            >
              Gallery 3D →
            </a>
          </CardFooter>
        </Card>
      </div>

      <style>
        .action-button-cards {
          grid-auto-rows: 1fr;
        }
        .action-button-card {
          height: 100%;
          min-height: 320px;
        }
        .action-button-card-content {
          flex: 1 1 0%;
          min-height: auto;
        }
        .action-button-card-footer {
          margin-top: auto;
        }
        @media (min-width: 768px) {
          .action-button-card-content {
            min-height: 150px;
          }
        }
      </style>
    </div>
  </section>
</BaseLayout>

